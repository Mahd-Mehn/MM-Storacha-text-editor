# Environment variables for Storacha Notes
# Copy this file to .env.local and fill in your values

# Storacha/w3up configuration (optional - will use defaults if not provided)
# PUBLIC_W3UP_SERVICE_URL=https://up.web3.storage
# PUBLIC_STORACHA_SERVICE_URL=https://storacha.network

# Development mode - set to 'true' for local-only development (no cloud features required)
# When enabled, the app will work without Storacha account setup
PUBLIC_DEV_MODE=false

# Development settings
PUBLIC_APP_NAME=Storacha Notes
PUBLIC_APP_VERSION=0.0.1

# Real-time collaboration (y-webrtc)
# Run your own signaling server with: bun run signaling
# Or use: bun run dev:collab (runs both dev server and signaling)
VITE_YJS_SIGNALING_SERVERS=ws://localhost:4444

# ICE servers for WebRTC NAT traversal (optional, defaults to Google STUN)
# Format: JSON array of {urls, username?, credential?} objects
# VITE_YJS_ICE_SERVERS=[{"urls":"stun:stun.l.google.com:19302"}]